<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="demo.wrc.com.project.activity.ActivityUI">
    <android.support.v7.widget.Toolbar
        android:id="@+id/child_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        title="UI篇"
        titleTextColor="#ff0"
        app:subtitle="Translucent_Palette"
        popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        />
    <ScrollView
        android:id="@+id/main_http_scrollview"
        android:paddingTop="?attr/actionBarSize"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp250"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textSize="@dimen/sp25"
                android:text="图片title的主色调颜色"/>

            <ImageView
                android:id="@+id/imageview01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/meinv01"
               android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp450"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textSize="@dimen/sp25"
                android:text="图片中间的主色调颜色"/>


        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>


</RelativeLayout>
